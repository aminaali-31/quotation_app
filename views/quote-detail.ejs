<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') %>
    <title>Document</title>
    <style>
        main {
            background-color: #f4f7fb;
            min-height: 90vh;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            padding: 20px;
        }
    </style>
</head>
<body>
    <%- include('nav') %>
    <main>
        <div class="card shadow-sm border-0 mb-3" style="width: 300px;">
            <div class="text-muted small card-header">
                <%= quotation.quote_no %>
            </div>
            <div class="card-body p-3">
            <h6 class="fw-semibold mb-1" style="font-size: 20px;">
                <%= quotation.title %>
            </h6>
            <div class="text-dark fw-medium"  style="font-size: 18px;">
                Price: <span class="text-primary">Rs. <%= total.toLocaleString() %></span>
            </div>
        </div>
     </div>

        <table cellpadding="10" class="table table-hover table-striped table-bordered align-middle">
        <thead>
        <tr>
            <th scope="col" class="text-start table-dark">Product</th>
            <th scope="col" class="text-start table-dark">Category</th>
            <th scope="col" class="text-center table-dark">Qty</th>
            <th scope="col" class="text-end table-dark">Unit Price</th>
            <th scope="col" class="text-end table-dark">Total</th>
        </tr>
        </thead>
        <tbody class="table-group-divider">
        <% items.forEach(item => { %>
        <tr>
            <th scope="row" class="text-start"><%= item.name %></th>
            <td class="text-start"><%= item.category %></td>
            <td class="text-center"><%= item.qty %></td>
            <td class="text-end"><%= item.price.toLocaleString() %></td>
            <td class="text-end"><%= (item.price * item.qty).toLocaleString() %></td>
        </tr>
        <% }) %>

        </tbody>
        </table>

        <hr>
        <div class="text-center mt-2">
        <a href="/contact?quotation=<%= quotation.id %>" class="btn btn-outline-primary px-4 py-2 rounded-pill">
            Contact Us About This Quotation
        </a>
        </div>
    </main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>