<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') %>
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('nav') %>
    <main>
        <h2>Admin Panel</h2>
        <p>Build perfect solar quotations</p>
        <div class="content">
            <div class="form">
        <button onclick="window.location.href='/admin/add-product'"><strong>+</strong> Add Product</button>
        <table border="1" cellpadding="8" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th class="table-dark">Serial No</th>
            <th class="table-dark">Description</th>
            <th class="table-dark">Price</th>
            <th class="table-dark">Cost</th>
            <th class="table-dark">Category ID</th>
            <th class="table-dark">Actions</th>
        </tr>
        </thead>
        <tbody class="table-group-divider">
        <% products.forEach(product => { %>
        <tr>
            <td><%= product.serial_no %></td>
            <td><%= product.description %></td>
            <td><%= product.price.toLocaleString() %></td>
            <td><%= product.cost.toLocaleString() %></td>
            <td><%= product.category_name %></td>
            <td>
            <a href="/admin/edit-product/<%= product.serial_no %>" style="color: rgb(0, 115, 255); margin-right:15px;">
                <i class="fas fa-edit"></i>
                </a>
                <a href="/admin/delete-product/<%= product.serial_no %>"
                onclick="return confirm('Delete this product?')" style="color: red;">
                <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
        <% }) %>
        </tbody>
       </table>
            </div>
            <div><p>I'm empty now</p></div>
        </div>
    </main>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>